{
  "manifest_version": 3,
  "name": "Auto-Shield: Self-Learning Defense",
  "version": "1.0",
  "description": "Real-time AI detection of phishing and dark patterns with Active Learning.",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "Auto-Shield Active"
  }
}